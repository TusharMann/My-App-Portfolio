<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tushar.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:text="My Nanodegree Apps"
        android:layout_gravity="center"
        android:id="@+id/text1"
        android:layout_weight="1"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/Popular_Movies"
        android:textColor="#ffffff"
        android:background="#2E3D49"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="Popular Movies"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/Stock_Hawk"
        android:textColor="#ffffff"
        android:background="#2E3D49"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="Stock Hawk"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/Build_It_Bigger"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:background="#2E3D49"
        android:layout_gravity="center"
        android:text="Build It Bigger"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/Make_Your_App_Material"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:background="#2E3D49"
        android:text="Make Your App Material"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/Go_Ubiquitous"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:background="#2E3D49"
        android:layout_gravity="center"
        android:text="Go Ubiquitous"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/Capstone"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:background="#2E3D49"
        android:layout_gravity="center"
        android:text="Capstone"
        />
</LinearLayout>
